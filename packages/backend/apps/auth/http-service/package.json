{
  "author": "Roberto Pintos LÃ³pez",
  "bugs": {
    "url": "https://github.com/notaphplover/academy-manager/issues"
  },
  "description": "Auth http service",
  "dependencies": {
    "@academyjs/backend-application-mail": "workspace:*",
    "@academyjs/auth-better-auth": "workspace:*",
    "@academyjs/backend-auth-env": "workspace:*",
    "@academyjs/mail-nodemailer": "workspace:*",
    "@hono/node-server": "1.19.4",
    "@inversifyjs/http-better-auth": "3.0.0",
    "@inversifyjs/http-hono": "3.0.0",
    "@inversifyjs/logger": "^1.1.0",
    "better-auth": "^1.3.18",
    "hono": "4.9.9",
    "inversify": "^7.10.1"
  },
  "devDependencies": {
    "@better-auth/cli": "1.3.18",
    "@stryker-mutator/core": "9.1.1",
    "@stryker-mutator/typescript-checker": "9.1.1",
    "@stryker-mutator/vitest-runner": "9.1.1",
    "@types/node": "22.18.6",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "rollup": "4.52.3",
    "ts-loader": "9.5.4",
    "tslib": "2.8.1",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "devEngines": {
    "node": "^22.10.2",
    "pnpm": "^10.13.1"
  },
  "keywords": [],
  "license": "MIT",
  "main": "lib/index.js",
  "exports": {
    ".": "./lib/index.js"
  },
  "name": "@academyjs/auth-http-service",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notaphplover/academy-manager.git"
  },
  "scripts": {
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc --build tsconfig.cjs.json && pnpm exec foundation-ts-package-cjs ./lib/cjs",
    "build:esm": "rollup -c ./rollup.config.mjs && pnpm exec foundation-ts-package-esm ./lib/esm",
    "build:clean": "rimraf lib",
    "db:schemas:generate": "node ./node_modules/@better-auth/cli/dist/index.mjs generate --config ./lib/cjs/app/scripts/generateBetterAuthSchema.mjs",
    "format": "prettier --write ./src",
    "lint": "eslint ./src",
    "prebuild": "pnpm run build:clean",
    "serve": "node ./lib/cjs/index.js",
    "test": "vitest run",
    "test:integration": "pnpm run test --project Integration",
    "test:coverage": "pnpm run test:unit --coverage",
    "test:mutation": "stryker run",
    "test:uncommitted": "pnpm run test --changed=HEAD",
    "test:unit": "pnpm run test --project Unit"
  },
  "version": "0.1.0"
}
