  "description": "Auth prisma adapter",
  "dependencies": {
    "@academyjs/backend-common": "workspace:^",
    "@academyjs/backend-db": "workspace:^",
    "@prisma/client": "6.17.1"
  },
  "devDependencies": {
    "@academyjs/backend-auth-application": "workspace:^",
    "@academyjs/backend-auth-domain": "workspace:^",
    "@stryker-mutator/core": "9.2.0",
    "@stryker-mutator/typescript-checker": "9.2.0",
    "@stryker-mutator/vitest-runner": "9.2.0",
    "@types/node": "22.18.9",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv": "17.2.3",
    "eslint": "9.37.0",
    "prettier": "3.6.2",
    "prisma": "6.17.1",
    "rimraf": "6.0.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "inversify": "^7.10.2"
  },
  "devEngines": {
    "node": "^22.10.2",
    "pnpm": "^10.13.1"
  },
  "keywords": [],
  "license": "MIT",
  "main": "lib/index.js",
  "exports": {
    ".": "./lib/index.js"
  },
  "name": "@academyjs/auth-prisma",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notaphplover/academy-manager.git"
  },
  "scripts": {
    "build": "prisma generate && pnpm run build:cjs",
    "build:cjs": "tsc --build tsconfig.cjs.json",
    "build:clean": "rimraf lib",
    "db:migrations:generate": "prisma migrate dev",
    "db:migrations:resolve": "prisma migrate resolve",
    "db:migrations:reset": "prisma migrate reset",
    "db:migrations:status": "prisma migrate status",
    "format": "prettier --write ./src",
    "lint": "eslint ./src",
    "prebuild": "pnpm run build:clean",
    "test": "vitest run",
    "test:integration": "pnpm run test --project Integration",
    "test:coverage": "pnpm run test:unit --coverage",
    "test:mutation": "stryker run",
    "test:uncommitted": "pnpm run test --changed=HEAD",
    "test:unit": "pnpm run test --project Unit"
  },
  "version": "0.1.0"
}
