{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@academyjs/foundation-typescript-config/tsconfig.base.esm.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src/",
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "lib": ["DOM", "ES2022"],
    "jsx": "preserve",
    "module": "esnext",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "sourceMap": false,
    "tsBuildInfoFile": "tsconfig.esm.tsbuildinfo",
    "verbatimModuleSyntax": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
